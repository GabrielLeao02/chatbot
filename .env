# Porta do servidor HTTP (bin/www deve ler do app.js -> process.env.PORT)
PORT=8081

# Executar Chromium headless (true/false)
HEADLESS=true

# Pasta-raiz para sessions e cache do wwebjs
DATA_ROOT=./cache

# Flags do Chromium (use estas em servidores Linux sem sandbox)
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox
